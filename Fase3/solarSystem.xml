<world>
    <window width="1024" height="1024" />
    <camera>
        <position x="100" y="55" z="0" />
        <lookAt x="0" y="0" z="0" />
        <up x="0" y="1" z="0" />
        <projection fov="60" near="1" far="1000" />
    </camera>

    <group> 
        <!-- Sol -->
        <transform>
            <scale x="25" y="25" z="25" />
        </transform>
        <models>
            <model file="sphere_1_16_16.3d" />
        </models>
        
        <!-- Mercúrio -->
        <group>
            <transform>
                <translate time="10" align="true">
                    <point x="1.5" y="0" z="0" />
                    <point x="1.1" y="0" z="-1" />
                    <point x="0" y="0" z="-1.5" /> 
                    <point x="-1" y="0" z="-1.1" /> 
                    <point x="-1.5" y="0" z="0" /> 
                    <point x="-1.1" y="0" z="1" />
                    <point x="0" y="0" z="1.5" /> 
                    <point x="1" y="0" z="1.1" /> 
                </translate>
                <scale x="0.01" y="0.01" z="0.01" />
                <rotate time="4" x="0" y="1" z="0" /> 
            </transform>
            <models>
                <model file="sphere_1_8_8.3d" />
            </models>
        </group>

        <!-- Vênus -->
        <group>
            <transform>
                <translate time="17" align="true">
                    <point x="1.75" y="0" z="0" />
