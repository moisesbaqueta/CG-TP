        </group>

        <!-- Cometa (Patch) -->
        <group>
            <transform>
                <translate time="45" align="true">
                    <point x="5" y="1" z="-1" />
                    <point x="3" y="1.5" z="-5" />
                    <point x="-3" y="1.5" z="-5" />
                    <point x="-5" y="1" z="1" />
                    <point x="1" y="1" z="5" />
                </translate>
                <scale x="0.02" y="0.02" z="0.02" />
            </transform>
            <models>
                <!-- .\generator patch teapot.patch 10 bezier_10.3d -->
                <model file="bezier_10.3d" /> 
            </models>
        </group>
    </group>
</world>