                    <point x="1.7" y="0" z="1.8" />
                </translate>
                <scale x="0.04" y="0.04" z="0.04" />
                <rotate time="7" x="0" y="1" z="0" />
            </transform>
            <models>
                <model file="sphere_1_8_8.3d" />
            </models>
        </group>

        <!-- Júpiter -->
        <group>
            <transform>
                <translate time="40" align="true">
                    <point x="3" y="0" z="0" />
                    <point x="2.1" y="0" z="-2.1" />
