            <models>
                <model file="sphere_1_8_8.3d" />
            </models>

            <!-- Lua -->
            <group>
                <transform>
                    <translate time="10" align="true">
                        <point x="1.5" y="0" z="-1" />
                        <point x="1" y="0" z="1.5" />
                        <point x="-1.5" y="0" z="1" />
                        <point x="-1" y="0" z="-1.5" />
                    </translate>
                    <scale x="0.1" y="0.1" z="0.1" />
                    <rotate time="6" x="0" y="1" z="0" />
                </transform>
                <models>
                    <model file="sphere_1_8_8.3d" />
                </models>
            </group>
        </group>

        <!-- Marte -->
        <group>
            <transform>
                <translate time="27" align="true">
                    <point x="2.5" y="0" z="0" />
                    <point x="1.8" y="0" z="-1.7" />
                    <point x="0" y="0" z="-2.5" />
                    <point x="-1.7" y="0" z="-1.8" />
