            </transform>
            <models>
                <model file="sphere_1_8_8.3d" />
            </models>
        </group>

        <!-- Terra -->
        <group>
            <transform>
                <translate time="25" align="true">
                    <point x="2.1" y="0" z="0" />
                    <point x="1.5" y="0" z="-1.5" />
                    <point x="0" y="0" z="-2.1" />
                    <point x="-1.5" y="0" z="-1.5" />
                    <point x="-2.1" y="0" z="0" />
                    <point x="-1.5" y="0" z="1.5" />
